<mapper namespace="com.yedam.app.emp.mapper.EmpMapper">
	<!-- 전체조회 -->
	<select id="selectEmpAllList" resultType="EmpVO">
		SELECT   employee_id
		        ,first_name
		        ,last_name
		        ,email
		        ,phone_number
		        ,hire_date
		        ,job_id
		        ,salary
		        ,commission_pct
		        ,manager_id
		        ,department_id
		FROM     employees
		ORDER BY employee_id	
	</select>
	
